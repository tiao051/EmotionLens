@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Emotion Lens - Sentiment Analysis from Text</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css?v=@DateTime.Now.Ticks" />
</head>
<body>
    <!-- Header -->
    <header>
        <div class="container header-content">
            <a href="#" class="logo">
                <i class="fas fa-brain"></i>
                <span>EmotionLens</span>
            </a>
            <nav class="nav-links">
                <a href="#hero">Home</a>
                <a href="#dashboard">Analysis</a>
                <a href="#features">Features</a>
                <a href="#about">About</a>
            </nav>
        </div>
    </header>

    <div id="toast-container"></div>

    <!-- Hero Section -->
    <section id="hero" class="hero">
        <div class="particles-container" id="particles-js"></div>
        <div class="container">
            <div class="hero-content">
                <h1 class="hero-title">Classify Emotions from Social Media</h1>
                <p class="hero-subtitle">Using Deep Learning to analyze and recognize emotions from social media comments accurately, efficiently, and visually.</p>
                <div class="hero-buttons">
                    <a href="#dashboard" class="btn">Start Analysis</a>
                    <a href="#about" class="btn btn-outline">Learn More</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Dashboard Section -->
    <section id="dashboard" class="dashboard">
        <div class="container">
            <h2 class="section-title">Sentiment Analysis</h2>
            <p class="section-subtitle">Enter comments or upload a CSV file containing multiple comments to analyze sentiment in real-time.</p>

            <div class="analysis-container">
                <div class="input-section">
                    <h3 class="input-title">Enter Text</h3>
                    <div class="textarea-container">
                        <textarea id="input-text" placeholder="Enter the text or comment you want to analyze..."></textarea>
                    </div>
                    <div class="file-upload">
                        <label for="file-input" class="file-upload-btn" onclick="showFeatureComingSoon(event)">
                            <i class="fas fa-file-upload"></i>
                            <span class="file-upload-text">Upload CSV file (multiple comments)</span>
                        </label>
                        <input type="file" id="file-input" accept=".csv" style="display: none;">
                    </div>
                    <button id="analyze-cmt-btn" class="analyze-btn">
                        <i class="fas fa-search"></i>
                        Analyze Sentiment
                    </button>
                </div>
                <div class="input-section">
                    <h3 class="input-title">
                        Enter URL to Analyze
                        <i class="fas fa-info-circle info-icon">
                            <span class="tooltip">Currently we only support sentiment analysis from TikTok and YouTube URLs.</span>
                        </i>
                    </h3>
                    <div class="textarea-container">
                        <textarea id="input-url" placeholder="Enter the Url you want to analyze..."></textarea>
                    </div>
                    <div class="file-upload">
                        <label for="file-input" class="file-upload-btn" onclick="showFeatureComingSoon(event)">
                            <i class="fas fa-file-upload"></i>
                            <span class="file-upload-text">Upload CSV file (multiple URLs)</span>
                        </label>
                        <input type="file" id="file-input" accept=".csv" style="display: none;">
                    </div>
                    <button id="analyze-url-btn" class="analyze-btn">
                        <i class="fas fa-search"></i>
                        Analyze Sentiment
                    </button>
                </div>
                <div class="input-section">
                    <h3 class="input-title">Upload an image to Analyze</h3>
                    <div class="file-upload">
                        <label for="file-input-image" class="file-upload-btn">
                            <i class="fas fa-file-upload"></i>
                            <span class="file-upload-text">Upload Image</span>
                        </label>
                        <input type="file" id="file-input-image" accept="image/*" style="display: none;">
                    </div>
                    <button id="analyze-image-btn" class="analyze-btn">
                        <i class="fas fa-search"></i>
                        Analyze Sentiment
                    </button>
                </div>
                <div class="input-section">
                    <h3 class="input-title">Upload an Audio File to Analyze</h3>
                    <div class="file-upload">
                        <label for="audio-input" class="file-upload-btn">
                            <i class="fas fa-file-upload"></i>
                            <span class="file-upload-text">Upload Audio File (.mp3, .wav)</span>
                        </label>
                        <input type="file" id="audio-input" accept=".mp3, .wav" style="display: none;">
                    </div>
                    <button id="analyze-audio-btn" class="analyze-btn">
                        <i class="fas fa-search"></i>
                        Analyze Sentiment
                    </button>
                </div>
            </div>
            <div class="result-section">
                <h3 class="result-title">Analysis Results</h3>
                <div class="loading-animation" id="loading-animation">
                    <div class="spinner"></div>
                    <p class="loading-text">Analyzing...</p>
                </div>
                <div class="result-empty" id="result-empty">
                    <i class="fas fa-chart-pie"></i>
                    <p>The analysis results will be displayed here</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="features-section">
        <div class="container">
            <h2 class="section-title">Features</h2>
            <div class="features-list">
                <div class="feature-item">
                    <i class="fas fa-language"></i>
                    <h3>Text Emotion Analysis</h3>
                    <p>Analyze emotions from comments, posts, and messages using advanced NLP models (DistilBERT).</p>
                </div>
                <div class="feature-item">
                    <i class="fas fa-image"></i>
                    <h3>Image Emotion Recognition</h3>
                    <p>Detect facial emotions in images with state-of-the-art deep learning (EfficientNet).</p>
                </div>
                <div class="feature-item">
                    <i class="fas fa-volume-up"></i>
                    <h3>Audio Emotion Detection</h3>
                    <p>Classify emotions from voice and audio files using BiLSTM-based models.</p>
                </div>
                <div class="feature-item">
                    <i class="fab fa-tiktok"></i>
                    <h3>Social Media Integration</h3>
                    <p>Support for TikTok, YouTube and more. Analyze content directly from social media URLs.</p>
                </div>
                <div class="feature-item">
                    <i class="fas fa-chart-pie"></i>
                    <h3>Visualization</h3>
                    <p>Intuitive and interactive result visualization for better insights.</p>
                </div>
                <div class="feature-item">
                    <i class="fas fa-cogs"></i>
                    <h3>Batch Processing</h3>
                    <p>Upload CSV files for large-scale, automated emotion analysis.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- About Section -->
    <section id="about" class="about-section">
        <div class="container">
            <h2 class="section-title">About EmotionLens</h2>
            <p class="about-description">
                <b>EmotionLens</b> is a multi-modal emotion analysis system utilizing state-of-the-art deep learning models. The application enables emotion recognition from text, facial images, and audio, supporting social media platforms such as TikTok and YouTube.
                <br><br>
                The system leverages models like DistilBERT for text, EfficientNet for images, and BiLSTM for audio, providing fast, accurate, and intuitive emotion detection.
            </p>
            <ul class="about-features">
                <li><i class="fas fa-check-circle"></i> Analyze emotions from comments, videos, images, and audio</li>
                <li><i class="fas fa-check-circle"></i> Modern deep learning technology, intuitive results</li>
                <li><i class="fas fa-check-circle"></i> Multi-platform social media support</li>
            </ul>
        </div>
    </section>

    <!-- Popup Modal -->
    <div id="feature-modal" class="feature-modal">
        <div class="feature-modal-content">
            <span class="feature-modal-close" onclick="closeFeatureModal()">&times;</span>
            <i class="fas fa-tools feature-modal-icon"></i>
            <h3>Feature Coming Soon</h3>
            <p>This feature is not supported yet. We are developing it. Please stay tuned!</p>
        </div>
    </div>
    <script src="~/js/site.js"></script>
</body>
</html>
